#     max-spaces-inside: 1
#   brackets:
#     min-spaces-inside: 0
#     max-spaces-inside: 1
#   indentation:
#     spaces: 2
#   comments: disable
#   comments-indentation: disable

ignore: |
  molecule/
  .github
