---

extends: default
rules:
  document-start:
    present: true
  line-length:
    max: 195
    level: warning
  empty-lines:
    level: warning
    max: 2
    max-start: 0
    max-end: 0
  empty-values:
    forbid-in-block-mappings: true
    forbid-in-flow-mappings: true

#   braces:
